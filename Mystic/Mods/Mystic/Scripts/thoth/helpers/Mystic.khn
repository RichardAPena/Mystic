function PsionicDisciplineCheck()
    return HasUseCosts('PsiPointsResource')
      | SpellId('Shout_Mystic_AcidSpray_Interrupt')
      | SpellId('Target_Mystic_BackAgain')
      | SpellId('Target_Mystic_Crush')
      | SpellId('Teleportation_Mystic_PhantomJourney')
end

function GiantGrowthCheck()
    return HasStringInSpellRoll('MeleeUnarmedAttack')
      | HasStringInSpellRoll('MeleeWeaponAttack')
      | HasStringInSpellRoll('MeleeSpellAttack')
      | HasStringInSpellRoll('MeleeOffHandWeaponAttack')
end

function SpellPowerLevelEqualOrGreaterThan(value)
    return ConditionResult(context.HitDescription.SpellPowerLevel >= value)
end

